---
layout: null
permalink: /search.json
---
[
{%- for post in site.posts -%}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "date": "{{ post.date | date_to_xmlschema }}",
    "content": {{ post.content | strip_html | jsonify }},
    "type": "briefing",
    "tags": {{ post.tags | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{%- endfor -%}
{%- assign all_w = site.writeups | sort: 'date' | reverse -%}
{%- for w in all_w -%},{ 
    "title": {{ w.title | jsonify }},
    "url": {{ w.url | relative_url | jsonify }},
    "date": "{{ w.date | date_to_xmlschema }}",
    "content": {{ w.content | strip_html | jsonify }},
    "type": "writeup",
    "tags": {{ w.tags | jsonify }}
}{% endfor %}
{%- assign all_p = site.projects | sort: 'date' | reverse -%}
{%- for p in all_p -%},{ 
    "title": {{ p.title | jsonify }},
    "url": {{ p.url | relative_url | jsonify }},
    "date": "{{ p.date | date_to_xmlschema }}",
    "content": {{ p.content | strip_html | jsonify }},
    "type": "project",
    "tags": {{ p.tags | jsonify }}
}{% endfor %}
]
